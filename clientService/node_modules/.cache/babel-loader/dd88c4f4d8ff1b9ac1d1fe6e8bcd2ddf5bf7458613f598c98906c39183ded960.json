{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nexport default {\n  data() {\n    return {\n      inputText: '',\n      messages: [],\n      ws: null\n    };\n  },\n  mounted() {\n    this.connectWebSocket();\n  },\n  methods: {\n    connectWebSocket() {\n      this.ws = new WebSocket(\"ws://localhost:8080/ai-chat\"); // ✅ 改为你的真实后端 WebSocket 地址\n\n      this.ws.onopen = () => {\n        console.log(\"WebSocket 已连接\");\n      };\n      this.ws.onmessage = event => {\n        this.handleBotResponse(event.data);\n      };\n      this.ws.onerror = error => {\n        console.error(\"WebSocket 错误:\", error);\n      };\n      this.ws.onclose = () => {\n        console.log(\"WebSocket 已关闭，尝试重新连接...\");\n        setTimeout(this.connectWebSocket, 2000); // 自动重连\n      };\n    },\n    sendMessage() {\n      const text = this.inputText.trim();\n      if (!text || this.ws.readyState !== WebSocket.OPEN) return;\n      this.messages.push({\n        from: 'user',\n        text\n      }); // 添加用户消息\n      this.inputText = '';\n      this.ws.send(text); // 发送到后端\n\n      // 添加一个空bot消息用于拼接流式响应\n      this.messages.push({\n        from: 'bot',\n        text: ''\n      });\n      this.scrollToBottom();\n    },\n    handleBotResponse(data) {\n      if (data === '[DONE]') {\n        this.scrollToBottom();\n        return;\n      }\n      if (data.startsWith('[ERROR]')) {\n        this.messages.push({\n          from: 'bot',\n          text: '发生错误：' + data.replace('[ERROR]', '')\n        });\n        return;\n      }\n      const last = this.messages[this.messages.length - 1];\n      if (last && last.from === 'bot') {\n        last.text += data;\n      } else {\n        this.messages.push({\n          from: 'bot',\n          text: data\n        });\n      }\n      this.scrollToBottom();\n    },\n    autoResize() {\n      const textarea = this.$refs.textarea;\n      textarea.style.height = 'auto';\n      textarea.style.height = Math.min(textarea.scrollHeight, 200) + 'px';\n      textarea.style.overflowY = textarea.scrollHeight > 200 ? 'auto' : 'hidden';\n    },\n    scrollToBottom() {\n      this.$nextTick(() => {\n        const el = this.$refs.chatContent;\n        el.scrollTop = el.scrollHeight;\n      });\n    },\n    onFocus() {\n      this.scrollToBottom();\n    }\n  }\n};","map":{"version":3,"names":["data","inputText","messages","ws","mounted","connectWebSocket","methods","WebSocket","onopen","console","log","onmessage","event","handleBotResponse","onerror","error","onclose","setTimeout","sendMessage","text","trim","readyState","OPEN","push","from","send","scrollToBottom","startsWith","replace","last","length","autoResize","textarea","$refs","style","height","Math","min","scrollHeight","overflowY","$nextTick","el","chatContent","scrollTop","onFocus"],"sources":["src/views/ChatView.vue"],"sourcesContent":["<template>\r\n  <div class=\"chat-page\">\r\n    <div class=\"chat-content\" ref=\"chatContent\">\r\n      <div v-for=\"(msg, index) in messages\" :key=\"index\" :class=\"['message', msg.from]\">\r\n        {{ msg.text }}\r\n      </div>\r\n    </div>\r\n\r\n    <div class=\"chat-input\">\r\n      <textarea\r\n        v-model=\"inputText\"\r\n        ref=\"textarea\"\r\n        placeholder=\"发送一条消息...\"\r\n        rows=\"1\"\r\n        @focus=\"onFocus\"\r\n        @input=\"autoResize\"\r\n        @keydown.enter.exact.prevent=\"sendMessage\"\r\n      ></textarea>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      inputText: '',\r\n      messages: [],\r\n      ws: null\r\n    };\r\n  },\r\n  mounted() {\r\n    this.connectWebSocket();\r\n  },\r\n  methods: {\r\n    connectWebSocket() {\r\n      this.ws = new WebSocket(\"ws://localhost:8080/ai-chat\"); // ✅ 改为你的真实后端 WebSocket 地址\r\n\r\n      this.ws.onopen = () => {\r\n        console.log(\"WebSocket 已连接\");\r\n      };\r\n\r\n      this.ws.onmessage = (event) => {\r\n        this.handleBotResponse(event.data);\r\n      };\r\n\r\n      this.ws.onerror = (error) => {\r\n        console.error(\"WebSocket 错误:\", error);\r\n      };\r\n\r\n      this.ws.onclose = () => {\r\n        console.log(\"WebSocket 已关闭，尝试重新连接...\");\r\n        setTimeout(this.connectWebSocket, 2000); // 自动重连\r\n      };\r\n    },\r\n\r\n    sendMessage() {\r\n      const text = this.inputText.trim();\r\n      if (!text || this.ws.readyState !== WebSocket.OPEN) return;\r\n\r\n      this.messages.push({ from: 'user', text }); // 添加用户消息\r\n      this.inputText = '';\r\n\r\n      this.ws.send(text); // 发送到后端\r\n\r\n      // 添加一个空bot消息用于拼接流式响应\r\n      this.messages.push({ from: 'bot', text: '' });\r\n\r\n      this.scrollToBottom();\r\n    },\r\n\r\n    handleBotResponse(data) {\r\n      if (data === '[DONE]') {\r\n        this.scrollToBottom();\r\n        return;\r\n      }\r\n      if (data.startsWith('[ERROR]')) {\r\n        this.messages.push({ from: 'bot', text: '发生错误：' + data.replace('[ERROR]', '') });\r\n        return;\r\n      }\r\n\r\n      const last = this.messages[this.messages.length - 1];\r\n      if (last && last.from === 'bot') {\r\n        last.text += data;\r\n      } else {\r\n        this.messages.push({ from: 'bot', text: data });\r\n      }\r\n\r\n      this.scrollToBottom();\r\n    },\r\n\r\n    autoResize() {\r\n      const textarea = this.$refs.textarea;\r\n      textarea.style.height = 'auto';\r\n      textarea.style.height = Math.min(textarea.scrollHeight, 200) + 'px';\r\n      textarea.style.overflowY = textarea.scrollHeight > 200 ? 'auto' : 'hidden';\r\n    },\r\n\r\n    scrollToBottom() {\r\n      this.$nextTick(() => {\r\n        const el = this.$refs.chatContent;\r\n        el.scrollTop = el.scrollHeight;\r\n      });\r\n    },\r\n\r\n    onFocus() {\r\n      this.scrollToBottom();\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.chat-page {\r\n  display: flex;\r\n  flex-direction: column;\r\n  height: 100vh;\r\n}\r\n\r\n.chat-content {\r\n  flex: 1;\r\n  overflow-y: auto;\r\n  padding: 10px;\r\n}\r\n\r\n.message {\r\n  margin: 5px 0;\r\n  white-space: pre-wrap;\r\n  word-wrap: break-word;\r\n}\r\n\r\n.message.user {\r\n  text-align: right;\r\n  color: #333;\r\n}\r\n\r\n.message.bot {\r\n  text-align: left;\r\n  color: #007aff;\r\n}\r\n\r\n.chat-input {\r\n  padding: 10px;\r\n  border-top: 1px solid #ccc;\r\n}\r\n\r\ntextarea {\r\n  width: 100%;\r\n  padding: 10px;\r\n  font-size: 15px;\r\n  border-radius: 10px;\r\n  border: 1px solid #ddd;\r\n  resize: none;\r\n  max-height: 200px;\r\n  overflow-y: hidden;\r\n  box-sizing: border-box;\r\n}\r\n</style>\r\n"],"mappings":";AAuBA;EACAA,KAAA;IACA;MACAC,SAAA;MACAC,QAAA;MACAC,EAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,gBAAA;EACA;EACAC,OAAA;IACAD,iBAAA;MACA,KAAAF,EAAA,OAAAI,SAAA;;MAEA,KAAAJ,EAAA,CAAAK,MAAA;QACAC,OAAA,CAAAC,GAAA;MACA;MAEA,KAAAP,EAAA,CAAAQ,SAAA,GAAAC,KAAA;QACA,KAAAC,iBAAA,CAAAD,KAAA,CAAAZ,IAAA;MACA;MAEA,KAAAG,EAAA,CAAAW,OAAA,GAAAC,KAAA;QACAN,OAAA,CAAAM,KAAA,kBAAAA,KAAA;MACA;MAEA,KAAAZ,EAAA,CAAAa,OAAA;QACAP,OAAA,CAAAC,GAAA;QACAO,UAAA,MAAAZ,gBAAA;MACA;IACA;IAEAa,YAAA;MACA,MAAAC,IAAA,QAAAlB,SAAA,CAAAmB,IAAA;MACA,KAAAD,IAAA,SAAAhB,EAAA,CAAAkB,UAAA,KAAAd,SAAA,CAAAe,IAAA;MAEA,KAAApB,QAAA,CAAAqB,IAAA;QAAAC,IAAA;QAAAL;MAAA;MACA,KAAAlB,SAAA;MAEA,KAAAE,EAAA,CAAAsB,IAAA,CAAAN,IAAA;;MAEA;MACA,KAAAjB,QAAA,CAAAqB,IAAA;QAAAC,IAAA;QAAAL,IAAA;MAAA;MAEA,KAAAO,cAAA;IACA;IAEAb,kBAAAb,IAAA;MACA,IAAAA,IAAA;QACA,KAAA0B,cAAA;QACA;MACA;MACA,IAAA1B,IAAA,CAAA2B,UAAA;QACA,KAAAzB,QAAA,CAAAqB,IAAA;UAAAC,IAAA;UAAAL,IAAA,YAAAnB,IAAA,CAAA4B,OAAA;QAAA;QACA;MACA;MAEA,MAAAC,IAAA,QAAA3B,QAAA,MAAAA,QAAA,CAAA4B,MAAA;MACA,IAAAD,IAAA,IAAAA,IAAA,CAAAL,IAAA;QACAK,IAAA,CAAAV,IAAA,IAAAnB,IAAA;MACA;QACA,KAAAE,QAAA,CAAAqB,IAAA;UAAAC,IAAA;UAAAL,IAAA,EAAAnB;QAAA;MACA;MAEA,KAAA0B,cAAA;IACA;IAEAK,WAAA;MACA,MAAAC,QAAA,QAAAC,KAAA,CAAAD,QAAA;MACAA,QAAA,CAAAE,KAAA,CAAAC,MAAA;MACAH,QAAA,CAAAE,KAAA,CAAAC,MAAA,GAAAC,IAAA,CAAAC,GAAA,CAAAL,QAAA,CAAAM,YAAA;MACAN,QAAA,CAAAE,KAAA,CAAAK,SAAA,GAAAP,QAAA,CAAAM,YAAA;IACA;IAEAZ,eAAA;MACA,K